          <form role="form" id="link-edit-form">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title">Edit Tag</h4>
            </div>
            <div class="modal-body" id="link-modal-body">
              <div class="form-group">
                <label for="edit-title">Title</label>
                <input type="text" class="form-control" id="edit-title" value="<%= link.title %>">
              </div>
              <div class="form-group">
                <label for="edit-tags">Tags</label>
                <div id="edit-link-tag-area">
                  <div class="row edit-link-tag-row">
                    <div class="col-md-3">
                    <% var countrow = 1; %>
                    <% for (var i=0; i<tags.length; i++) { %>
                      <input type="checkbox" class="edit-tags" name="tags" value="<%= tags[i].id %>" <%= tags[i].checked %>> <%= tags[i].name %><br />
                      <% if ((countrow % 40) === 0) { %></div></div><br /><div class="row edit-link-tag-row"><div class="col-md-3"><% } else if ((countrow % 10) === 0) { %></div><div class="col-md-3"><% } %>
                      <% countrow++; %>
                    <% } %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-4">
                  <br />
                  <div class="form-group" id="edit-link-new-tag-div">
                    <div class="input-group">
                      <div class="input-group-addon">#</div>
                      <input class="form-control" type="text" id="edit-link-new-tag" placeholder="new tag">
                    </div>
                  </div>         
                  </div>
                </div>       
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <input type="submit" id="link-edit-submit" class="btn btn-primary" value="Save changes">
            </div>
          </form>  
