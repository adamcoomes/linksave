          <form role="form" id="photo-form" action="file/upload" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title">Edit Your Photo</h4>
            </div>
            <div class="modal-body" id="main-modal-body">
              <div class="form-group row">
                <div class="col-md-2"><img src="<% if (user.photo) { %><%= user.photo %><% } %>" height="80" width="80"></div>
                <div class="col-md-6">
                  <label>Upload a new avatar:</label>
                  <p class="photo-text">Please upload a square JPG image at least 100x100 pixels. It must be less than 1MB in size.</p>
                  <p class="text-danger" id="photo-error" style="display: none">File is too big.</p>
                  <input class="image-select" id="newphoto" type="file" name="avatar"/><br />
                </div> 
              </div>
            </div>             
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <input type="submit" id="photo-submit" class="btn btn-primary" value="Save changes">
            </div>
          </form>  