    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container" id="signup-text-inner">

          <div class="inner cover">
            <h1><strong>Free your <u>links</u>.</strong></h1>
            <p class="lead">Give your favorite links freedom from your browser. Its fast and as simple as copy/paste.</p>
            <p class="lead">
              <a href="#" class="btn btn-lg btn-success" id="signupBtn">Get Started</a>
            </p>
          </div>

        </div>

      </div>
      
      <div class="site-wrapper-inner signup-wrapper" style="display: none">

        <div class="cover-container">

          <div class="inner cover signup-inner">
            <h4 class="text-danger" id="signupError" style="visibility: hidden">Your password is too short</h4>
    				<form role="form" action="/auth/local/register" method="post" id="signupForm">
    				  <div class="form-group has-feedback" id="signupEmailDiv">
  				      <input type="text" name="email" class="form-control input-lg" id="signupEmail" placeholder="email address">
                <input type="hidden" name="username" id="signupUsername" value="">
              </div>
    				  <div class="form-group has-feedback" id="signupPasswordDiv">  
  				      <input type="password" name="password" class="form-control input-lg" id="signupPassword" placeholder="password">
              </div>
              <input type="hidden" name="_csrf" value="<%= _csrf %>" />          
    				  <div class="form-group">
    				   <label>By clicking Sign up, I agree to the Terms of Service and Privacy Policy.</label>
    				  </div>
    				  <button type="submit" id="submitSignup" class="btn btn-lg btn-success">Sign Up</button>
    				  <p><br />Already have an account? <a href="#" >Login</a></p>     
    				</form>
            </div>
        </div>
      </div>
    </div>