                    <div class="login-input-div"><input type="text" class="form-control" placeholder="email" size="21" name="identifier"></div>
                    <div class="login-input-div"><input type="password" class="form-control" placeholder="password" size="21" name="password"><input type="hidden" name="_csrf" value="<%= _csrf %>" /></div>
                    <div class="login-input-div">
                      <div class="row">
                        <div class="col-md-7"><h6><input name="remember" type="checkbox" value="1"> Remember me</h6></div><div class="col-md-5"><button type="submit" class="btn btn-default">Sign in</button></div>
                      </div>
                    </div>
                  </div>
                  </form>
                </li>
              </ul>
            </li>
          </ul>
        </div> 
      </div>        
