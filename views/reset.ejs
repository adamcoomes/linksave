      <div class="signin-wrapper">

        <% if (sent) { %> <script type="text/javascript">window.onload = function() { swal("Sent!", "A password reset email has been sent! Check your email to complete the reset.", "success"); };</script><% } %>

        <div class="signin-inner">
          <h1><strong>Reset your password</strong></h1>
          <p class="lead">To change your password, enter the email address associated with your account.</p>
  				<form role="form" method="post" action="/api/user/reset" id="resetForm">
            <% if (newpass) { %>
            <input type="hidden" name="id" value="<%= id %>">
            <input type="hidden" name="token" value="<%= token %>">

            <div class="form-group has-feedback">
              <h4 class="text-danger formError" style="display: none">Your password must be at least 8 characters.</h4>
              <input type="password" name="pass" class="form-control input-lg userPassword" id="resetPassword" placeholder="new password">
            </div>
            <div class="form-group">
              <input type="password" name="verifyPass" class="form-control input-lg" id="verifyPassword" placeholder="verify new password">
            </div>
            <% } else { %>                        
  				  <div class="form-group has-feedback">
  			      <input type="text" name="email" class="form-control input-lg" id="resetEmail" placeholder="email address">
            </div>
            <% } %>
  				  <button type="submit" id="resetSubmit" class="btn btn-lg btn-success">Submit</button>
  				</form>
        
        </div>

      </div>